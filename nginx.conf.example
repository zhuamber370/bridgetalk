# BridgeTalk Nginx 配置示例
#
# 使用方法：
# 1. 复制此文件到 /etc/nginx/sites-available/bridgetalk
# 2. 根据你的实际情况修改配置（域名、路径等）
# 3. 创建软链接：ln -s /etc/nginx/sites-available/bridgetalk /etc/nginx/sites-enabled/
# 4. 测试配置：nginx -t
# 5. 重启 Nginx：systemctl restart nginx

server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com;  # 修改为你的域名

    # 如果启用了 HTTPS，取消下面的注释
    # listen 443 ssl http2;
    # listen [::]:443 ssl http2;
    # ssl_certificate /path/to/your/cert.pem;
    # ssl_certificate_key /path/to/your/key.pem;

    # 日志文件
    access_log /var/log/nginx/bridgetalk_access.log;
    error_log /var/log/nginx/bridgetalk_error.log;

    # 客户端最大请求体大小（用于文件上传等）
    client_max_body_size 10M;

    # ─── 前端静态文件 ───
    location / {
        # 修改为你的前端构建输出目录
        root /path/to/bridgetalk/packages/client/dist;
        index index.html;

        # SPA 路由支持（所有路由都返回 index.html）
        try_files $uri $uri/ /index.html;

        # 静态资源缓存（生产环境）
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }

        # 安全头
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;
    }

    # ─── 后端 API 代理 ───
    location /api/ {
        proxy_pass http://127.0.0.1:3001;  # 修改为你的后端地址和端口

        # 代理头
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 禁用缓存（API 响应不应被缓存）
        proxy_cache_bypass $http_upgrade;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # ─── SSE 事件流（特殊处理）───
    # Server-Sent Events 需要禁用缓冲
    location /api/v1/events {
        proxy_pass http://127.0.0.1:3001;

        proxy_http_version 1.1;
        proxy_set_header Connection '';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 禁用缓冲（关键！）
        proxy_buffering off;
        proxy_cache off;
        chunked_transfer_encoding off;

        # SSE 超时设置（保持长连接）
        proxy_read_timeout 86400s;  # 24 小时
        proxy_connect_timeout 75s;
    }

    # 任务级别的 SSE 事件流
    location ~ ^/api/v1/tasks/[^/]+/events$ {
        proxy_pass http://127.0.0.1:3001;

        proxy_http_version 1.1;
        proxy_set_header Connection '';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 禁用缓冲
        proxy_buffering off;
        proxy_cache off;
        chunked_transfer_encoding off;

        # 超时设置
        proxy_read_timeout 86400s;
        proxy_connect_timeout 75s;
    }

    # ─── 安全：禁止访问敏感文件 ───
    location ~ /\. {
        deny all;
    }

    location ~ \.(db|json|env)$ {
        deny all;
    }
}

# ─── HTTPS 重定向（可选）───
# 如果你启用了 HTTPS，取消下面的注释以强制使用 HTTPS
